{
  "name": "koilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Koibanx-software/koilerplate.git",
  "author": "Arturo GUerrero <arturo.guerrero@koibanx.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts | npx pino-pretty",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --config .prettierrc.json --check \"**/*.{js,jsx,ts,tsx,json,md,mdx}\"",
    "prettier:fix": "prettier --write .",
    "format": "yarn prettier:fix && yarn lint:fix",
    "start": "npm run build && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/app.js",
    "prepare": "husky install",
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "husky": "^8.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.5"
  },
  "dependencies": {
    "ts-node-dev": "^2.0.0"
  }
}
